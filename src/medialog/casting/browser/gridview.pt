<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="medialog.casting">
<body>

<metal:content-core fill-slot="content-core">

    <!--div><a class="padding-10 white plone-background" href="/actors/++add++person">
    <i class="fa fa-plus" id="compact_button"> </i> Ny person </a>
  </div-->

<metal:block use-macro="context/@@listing_view/macros/content-core">

  <metal:entries fill-slot="entries">

  <div class="flex">
    <metal:block use-macro="context/@@listing_view/macros/entries"
        tal:define="portal context/@@plone_portal_state/portal;
                    image_scale portal/@@image_scale">
      <metal:entry fill-slot="entry">

            <div class="grid-item">
              <a tal:attributes="href item_link">
                <img tal:replace="structure python:image_scale.tag(item, 'image', scale=thumb_scale_summary, css_class='gridimage')" />
                  <br/>${item/first_name} ${item/last_name}
              </a>

            </div>
      </metal:entry>
    </metal:block>
  </div>
  </metal:entries>

</metal:block>
<style>

.template-gridview .flex  {
  padding: 0;
  display: flex !important;
  flex-wrap: wrap;
  list-style-image: none;
  list-style-type: none;
  justify-content: flex-start;
  margin: auto;
}

.grid-item {Â 
    display: block;
    margin: 20px;
    list-style-image: none;
    list-style-type: none;
    width: 200px !important;

}

.grid-item img {
  width: 200px !important;
  height: 300px !important;
  object-fit: cover !important;
  object-position: 50 0;
  margin-botttom: 10px !important;
}

.grid-item,
.grid-item  a {
  text-align: center;
  margin-top: 1em;
  overflow: hidden;
  color: #999;
 border-bottom: 0 none !important;
 font-size: 100%;
}

</style>
</metal:content-core>

</body>
</html>
