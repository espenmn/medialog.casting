<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/@@main_template/macros/master"
    i18n:domain="medialog.casting">
<body>

<metal:content-core fill-slot="main">
<metal:block define-macro="content-core">

  <section id="section-${view/id}" class=""
    tal:define="items context/@@contentlisting;">
       <ol class="flex flex-wrap">
        <tal:image tal:repeat="item items|None">
          <li tal:define="obj item/getObject;
                 scale_func obj/@@images;
                 scaled_image python:scale_func.scale('image', width=250, height=150, direction='down')">
            <figure tal:condition="scaled_image">
              <a href="${item/getURL|item/absolute_url}" class="margin-0 padding-0">
                <img  class="image-popup"
                      tal:replace="structure python:scaled_image.tag()"
                      tal:on-error=""
                      tal:condition="scaled_image"/>
                <div><p  class="center">${item/Title}</p></div>
              </a>
            </figure>
          </li>
        </tal:image>
      </ol>
  <style>

  #section-${view/id} ol.flex.flex-wrap  {
    padding: 0;
    list-style-image: none;
    list-style-type: none;
    justify-content: flex-start;
    max-width: 250px;
    margin: auto;
  }

  #section-${view/id} li {Â 
      width: 250px;
      margin: 250px;
      list-style-image: none;
      list-style-type: none;
      overflow: hidden;
  }

  #section-${view/id} img {
    width: 100%;
  }

  #section-${view/id} p.center {
    text-align: center;
    margin-top: 1em;
    overflow: hidden;
    width: 250px;
    color: #999;
  }

  </style>

  </section>


  </metal:block>
</metal:content-core>

</body>
</html>
